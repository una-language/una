{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["es2020", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@una/ast": ["libs/ast/src/index.ts"],
      "@una/lexer": ["libs/lexer/src/index.ts"],
      "@una/parser": ["libs/parser/src/index.ts"],
      "@una/translator": ["libs/translator/src/index.ts"],
      "@una/transpiler": ["libs/transpiler/src/index.ts"]
    },
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictPropertyInitialization": false,
    "target": "es2015"
  },
  "exclude": ["node_modules", "tmp"]
}
